function formateTimer(timeToTranslate){

    var milliseconds = parseInt((timeToTranslate%1000)/100)
        , seconds = parseInt((timeToTranslate/1000)%60)
        , minutes = parseInt((timeToTranslate/(1000*60))%60)
        , hours = parseInt((timeToTranslate/(1000*60*60))%24);

    hours = (hours < 10) ? "0" + hours : hours;
    minutes = (minutes < 10) ? "0" + minutes : minutes;
    seconds = (seconds < 10) ? "0" + seconds : seconds;

    return hours + ":" + minutes + ":" + seconds ;
}

