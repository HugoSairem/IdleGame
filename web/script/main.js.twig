        currentStage = "Troops";
        ennemyDoor.level = 1;
        ennemyDoor.baseLife = ennemyDoor.life;

    }
    if (ennemyTroops.level>=compteurBossTroops){
        currentStage="Boss";
        ennemyTroops.level=1;
        ennemyTroops.baseLife=ennemyTroops.life;
    }

    showimgBoss()
    showBossLevel();
}

