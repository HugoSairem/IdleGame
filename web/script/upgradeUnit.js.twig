function buyUpgMoney(name,upgrade,divid){
    var priceUpgrade = name.bonus[upgrade][1];
    if (name.bonus[upgrade][0]===false && compteBanquaire >= priceUpgrade){
        name.bonus[upgrade][0]=true;
    var div = document.getElementById(divid);
    div.style.display = 'none';
    name.globalBonus=name.globalBonus+2;
    compteBanquaire=compteBanquaire - priceUpgrade;
    }
}

